{
  "name": "eleventy-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "start": "run-p eleventy:dev sass:dev js:dev",
    "build": "run-s eleventy:build sass:build js:build",
    "eleventy:dev": "eleventy --serve",
    "eleventy:build": "eleventy",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "js:dev": "esbuild src/js/*.js src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/*.js src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "clean": "rimraf dist",
    "lint": "run-s lint:html lint:css",
    "prelint:html": "npm run build",
    "lint:html": "pa11y-ci -c .pa11yci.json './dist/**/*.html'",
    "lint:css": "stylelint 'src/scss/**/*.scss' --color --formatter verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "esbuild": "^0.14.36",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0",
    "stylelint": "^14.6.1",
    "stylelint-config-standard-scss": "^3.0.0"
  }
}
