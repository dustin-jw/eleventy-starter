{
  "name": "eleventy-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prestart": "check-node-version --package && npm run clean",
    "prebuild": "check-node-version --package && npm run clean",
    "start": "run-p eleventy:dev sass:dev js:dev js:dev:legacy",
    "build": "run-s eleventy:build sass:build js:build js:build:legacy",
    "eleventy:dev": "eleventy --serve --incremental",
    "eleventy:build": "eleventy",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "js:dev": "esbuild src/js/*.js  src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/*.js  src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "js:dev:legacy": "webpack --progress -w",
    "js:build:legacy": "webpack --progress",
    "clean": "rm -rf dist",
    "lint": "run-s lint:css lint:js",
    "lint:css": "stylelint 'src/scss/**/*.scss' --color --formatter verbose",
    "lint:js": "eslint . --ext .js,.ts",
    "test": "vitest --run",
    "test:e2e": "playwright test",
    "pretest:e2e": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@axe-core/playwright": "^4.9.0",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@playwright/test": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "babel-loader": "^9.1.3",
    "check-node-version": "^4.2.1",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "stylelint": "^16.4.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "vitest": "^2.0.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    ">0%",
    "not dead",
    "not supports es6-module"
  ]
}
